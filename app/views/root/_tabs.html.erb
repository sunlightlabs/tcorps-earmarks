<%
  plain = {
    :nav     => %{<a href="#plain_text"><span>Plain Text</span></a>},
    :partial => "plain_text"
  }

  source = {
    :nav     => %{<a href="#source_doc"><span>Source Doc</span></a>},
    :partial => "source_doc"
  }
  
  tabs = @has_plain_text ? [source, plain] : [source]
%>

<div id="tabs">
  <% if tabs.size > 1 %>
    <ul>
      <% tabs.each do |tab| %>
        <li><%= tab[:nav] %></li>
      <% end %>
    </ul>
  <% end %>
  
  <% tabs.each do |tab| %>
    <%= render :partial => tab[:partial] %>
  <% end %>
</div>
