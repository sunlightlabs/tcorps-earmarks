<div class="column_1">
  <div id="tabs">
    <ul>
      <li><a href="#plain_text"><span>Plain Text</span></a></li>
      <li><a href="#source_doc"><span>Source Doc</span></a></li>
    </ul>
    <div id="plain_text">
      <textarea rows="20" readonly><%= @source_doc.plain_text %></textarea>
    </div>
    <div id="source_doc">
      <%= render :partial => "embedded_doc" %>
      <div class="source_doc_url">
        This document is available
        <%= link_to "from the source", @source_doc.source_url %>
        or <%= link_to "on Scribd", ScribdUtil.url(@source_doc.scribd_doc_id) %>.
      </div>
    </div>
  </div>
  <br/>
</div>
<div class="column_2">
  <div class="content">
    <% if flash[:error] %>
      <div class="flash_error"><%= flash[:error] %></div>
    <% elsif flash[:notice] %>
      <div class="flash_notice"><%= flash[:notice] %></div>
    <% end %>
    <h2>Help Us Gather Earmark Data</h2>
    <%= render :partial => "user_message" %>
    <% if @prepopulated %>
      <p>We have pre-populated the form below.  Please verify and correct it using the source document on the left.</p>
    <% else %>
      <p>Please fill out the form below.  Use data from the source document on the left.</p>
    <% end %>
    <%= render :partial => "letter_form", :locals => { :letter => @letter } %>
  </div>
</div>
</div>
<div class="clear_floats">
</div>
