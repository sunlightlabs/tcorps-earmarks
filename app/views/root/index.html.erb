<div class="column_1">
  <div id="tabs">
    <ul>
      <li><a href="#plain_text"><span>Plain Text</span></a></li>
      <li><a href="#source_doc"><span>Source Doc</span></a></li>
    </ul>
    <div id="plain_text">
      <textarea rows="20" readonly><%= @source_doc.plain_text %></textarea>
    </div>
    <div id="source_doc">
      <%= render :partial => "embedded_doc" %>
    </div>
  </div>
</div>
<div class="column_2">
  <div class="content">
    <% if flash[:error] %>
      <div class="flash_error"><%= flash[:error] %></div>
    <% elsif flash[:notice] %>
      <div class="flash_notice"><%= flash[:notice] %></div>
    <% end %>
    <h2>Help Us Gather Data</h2>
    <p>Please fill out as much as you can:</p>
    <% form_for @letter, :url => { :action => :create } do |f| %>
      <%= f.error_messages %>
      <%= render :partial => "form", :object => f %>
      <div class="field">
        <label>&nbsp;</label>
        <%= f.submit 'Submit' %>
      </div>
    <% end %>
    <%= render :partial => "user_message" %>
  </div>
</div>
</div>
<div class="clear_floats">
</div>
